<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:animateLayoutChanges="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_behavior="com.mikechoch.prism.user_interface.FixAppBarLayoutBehavior">

        <android.support.v7.widget.Toolbar
            android:id="@+id/prism_post_upload_image_selection_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_test"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/prism_post_upload_image_selection_toolbar_gallery_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="20dp"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_image_white_48dp"
                        android:scaleType="fitCenter"
                        android:background="?selectableItemBackgroundBorderless" />

                    <ImageView
                        android:id="@+id/prism_post_upload_image_selection_toolbar_camera_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="20dp"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_camera_white_48dp"
                        android:scaleType="fitCenter"
                        android:background="?selectableItemBackgroundBorderless" />
                    
                    <TextView
                        android:id="@+id/prism_post_upload_image_selection_toolbar_next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEXT"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="top|center_horizontal"
        android:paddingTop="?android:attr/actionBarSize"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/prism_post_upload_image_selection_crop_image_view_limiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:layout_gravity="top|center_horizontal"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prism_post_upload_image_selection_action_button_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:layout_gravity="top|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/prism_post_upload_image_selection_crop_controller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/prism_post_upload_image_selection_crop_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.yalantis.ucrop.view.widget.HorizontalProgressWheelView
                        android:id="@+id/prism_post_upload_image_selection_crop_horizontal_progress_wheel_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prism_post_upload_image_selection_rotate_controller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/prism_post_upload_image_selection_rotate_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/prism_post_upload_image_selection_reset_rotation_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="56dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_restart_white_48dp" />

                    <com.yalantis.ucrop.view.widget.HorizontalProgressWheelView
                        android:id="@+id/prism_post_upload_image_selection_rotate_horizontal_progress_wheel_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/prism_post_upload_image_selection_90_rotation_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="56dp"
                        android:src="@drawable/ic_format_rotate_90_white_36dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prism_post_upload_image_selection_aspect_ratio_controller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/prism_post_upload_image_selection_aspect_ratio_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <!--Adding programmatically in PrismPostImageSelectionActivity.this-->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25sp"
            android:background="@android:color/white"/>

        <LinearLayout
            android:id="@+id/prism_post_upload_image_selection_action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:layout_gravity="top|center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">
            
            <ImageView
                android:id="@+id/prism_post_upload_image_selection_crop_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_crop_white_36dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/prism_post_upload_image_selection_rotate_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_crop_rotate_white_36dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/prism_post_upload_image_selection_aspect_ratio_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_aspect_ratio_white_36dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>