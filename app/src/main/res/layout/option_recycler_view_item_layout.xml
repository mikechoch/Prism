<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_recycler_view_item_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:foreground="@drawable/setting_option_selector">

    <ImageView
        android:id="@+id/settings_recycler_view_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:scaleType="fitCenter"
        android:tint="@android:color/white"/>

    <TextView
        android:id="@+id/settings_recycler_view_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/settings_recycler_view_item_icon"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>

</RelativeLayout>