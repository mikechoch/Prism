<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choose_username_alert_dialog_relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/choose_username_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Username"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:theme="@style/TextLabel"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/choose_username_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/choose_username_header_text_view"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/choose_username_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:enabled="true"/>

    </android.support.design.widget.TextInputLayout>

    <ProgressBar
        android:id="@+id/choose_username_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reset_password_input_email_text_input_layout"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/circle_progress_foreground" />

</RelativeLayout>