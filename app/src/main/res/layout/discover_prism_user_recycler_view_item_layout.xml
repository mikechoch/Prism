<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/discover_prism_user_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardUseCompatPadding="true">
    
    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/discover_prism_user_profile_picture_image_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/discover_prism_user_follow_user_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:padding="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/discover_prism_user_username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TextView
            android:id="@+id/discover_prism_user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>

</android.support.v7.widget.CardView>