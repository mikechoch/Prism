<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="28dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/image_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center">

        <ImageView
            android:id="@+id/recycler_view_image_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true" />

        <ProgressBar
            android:id="@+id/image_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="64dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/recycler_view_user_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_relative_layout"
        android:layout_alignStart="@id/image_relative_layout"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|bottom"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

</RelativeLayout>