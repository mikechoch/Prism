<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:animateLayoutChanges="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_behavior="com.mikechoch.prism.user_interface.FixAppBarLayoutBehavior">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical">

                <TextView
                    android:id="@+id/toolbar_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Update profile picture"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/upload_image_toolbar_gallery_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="16dp"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_image_white_48dp"
                        android:background="?selectableItemBackgroundBorderless" />

                    <ImageView
                        android:id="@+id/upload_image_toolbar_camera_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_camera_white_48dp"
                        android:background="?selectableItemBackgroundBorderless" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:clipToPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?android:attr/actionBarSize"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/uploaded_profile_crop_image_view_limiter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.theartofdev.edmodo.cropper.CropImageView
                    android:id="@+id/uploaded_profile_crop_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:cropToPadding="true"
                    android:scaleType="fitCenter"
                    android:elevation="6dp"
                    app:cropShape="oval"
                    app:cropFixAspectRatio="true" />

            </LinearLayout>

            <com.mikechoch.prism.user_interface.BitmapEditingControllerLayout
                android:id="@+id/uploaded_profile_picture_bitmap_editing_controller_layout"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginTop="8dp"
                android:clipChildren="true"
                android:clipToPadding="true"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/uploaded_profile_picture_bitmap_editing_controller_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:elevation="5dp"
                android:scaleY="-1"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextColor="@android:color/white"
                app:tabSelectedTextColor="@color/colorAccent" />

            <Button
                android:id="@+id/save_profile_button_card_view"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="16dp"
                android:text="SAVE"
                android:textSize="19sp"
                android:clickable="true"
                android:textColor="@android:color/white"
                android:background="@drawable/button_selector" />

            <ProgressBar
                android:id="@+id/upload_profile_picture_progress_bar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/circle_progress_foreground" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>